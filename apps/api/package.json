{
    "name": "api",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "build": "npx prisma generate && npx nest build",
        "dev": "npx nest start --watch",
        "start": "npx prisma db push --accept-data-loss && node dist/main",
        "start:prod": "npx prisma db push --accept-data-loss && npm run prisma:seed && node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "prisma:generate": "../../node_modules/.bin/prisma generate",
        "prisma:migrate": "../../node_modules/.bin/prisma migrate dev",
        "prisma:studio": "../../node_modules/.bin/prisma studio",
        "prisma:push": "../../node_modules/.bin/prisma db push",
        "prisma:seed": "npx ts-node --transpile-only prisma/seed.ts"
    },
    "dependencies": {
        "@nestjs/common": "^10.3.0",
        "@nestjs/config": "^3.1.0",
        "@nestjs/core": "^10.3.0",
        "@nestjs/jwt": "^10.2.0",
        "@nestjs/passport": "^10.0.3",
        "@nestjs/platform-express": "^10.3.0",
        "@nestjs/platform-socket.io": "^10.3.0",
        "@nestjs/swagger": "^7.2.0",
        "@nestjs/websockets": "^10.3.0",
        "@prisma/adapter-pg": "^5.19.1",
        "@prisma/client": "^5.19.1",
        "@types/pg": "^8.16.0",
        "bcryptjs": "^2.4.3",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.1",
        "dotenv": "^17.2.4",
        "ioredis": "^5.3.2",
        "passport": "^0.7.0",
        "passport-jwt": "^4.0.1",
        "pg": "^8.18.0",
        "prisma": "^5.19.1",
        "reflect-metadata": "^0.2.1",
        "rxjs": "^7.8.1",
        "socket.io": "^4.6.1",
        "ts-node": "^10.9.2",
        "typescript": "^5.3.0",
        "xlsx": "^0.18.5"
    },
    "devDependencies": {
        "@nestjs/cli": "^10.3.0",
        "@nestjs/testing": "^10.3.0",
        "@types/bcryptjs": "^2.4.6",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.11",
        "@types/node": "^20.10.0",
        "@types/passport-jwt": "^4.0.1",
        "@typescript-eslint/eslint-plugin": "^6.18.0",
        "@typescript-eslint/parser": "^6.18.0",
        "all-the-cities": "^3.1.0",
        "eslint": "^8.56.0",
        "jest": "^29.7.0",
        "ts-jest": "^29.1.1"
    }
}