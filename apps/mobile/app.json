{
  "expo": {
    "name": "LogComp Driver",
    "slug": "logcomp-driver",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "scheme": "logcomp",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "kz.logcomp.driver",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Приложение использует геолокацию для отслеживания рейса",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Геолокация нужна для отслеживания вашего маршрута в фоновом режиме",
        "NSLocationAlwaysUsageDescription": "Геолокация нужна для отслеживания вашего маршрута в фоновом режиме",
        "UIBackgroundModes": [
          "location",
          "fetch"
        ]
      }
    },
    "android": {
      "package": "kz.logcomp.driver",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "FOREGROUND_SERVICE",
        "CAMERA"
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Разрешите доступ к геолокации для отслеживания маршрута"
        }
      ],
      [
        "expo-image-picker",
        {
          "cameraPermission": "Разрешите доступ к камере для фото документов"
        }
      ],
      [
        "@rnmapbox/maps",
        {
          "downloadToken": "YOUR_MAPBOX_DOWNLOAD_TOKEN"
        }
      ]
    ],
    "extra": {
      "apiUrl": "http://192.168.2.103:3001"
    }
  }
}